<!DOCTYPE html>
<html>
<head>
  <title>Devernote</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
	<div class="navbar-fixed-top container span3 offset11" style="background-color:green">
	  <div class="navbar-inner">
	    <ul class="nav">

		<% if current_user%>
		<div style="padding-top:20px;padding-left:30px;">
			<%= link_to "Evernote Sign out ", destroy_user_session_path,{ :method => :delete ,:style=>"font-size: 25px"}%>
		</div>

		<%else%>
		<div style="padding-top:20px;padding-left:15px;">
			<%= link_to "Sign in with Evernote", user_omniauth_authorize_path(:evernote) ,{:style=>"font-size: 25px"}%>
		</div>
		<%end%>
	    </ul>
	  </div>
	</div>
    <!-- <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p> -->

<%= yield %>

</body>
</html>
